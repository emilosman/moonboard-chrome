{
  "name": "moonboard-chrome-vue",
  "description": "Send images to Moonboard",
  "version" : "0.0.1",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions" : [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*",
    "https://localhost:3000/*"
   ],
  "browser_action": {
    "default_title": "moonboard-chrome-vue",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
